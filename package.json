{
  "name": "passhotel",
  "version": "0.1.0",
  "private": true,
  "description": "PASS Hotel static site with Tailwind CSS and PostCSS build pipeline",
  "scripts": {
    "dev": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/styles.css --watch --postcss",
    "build": "NODE_ENV=production tailwindcss -i ./src/styles/tailwind.css -o ./public/css/styles.css --minify --postcss"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  }
}
